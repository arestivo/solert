{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "comment-format": [
            false
        ],
        "no-console": [
            false
        ],
        "semicolon": [
            true,
            "never"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "curly": false,
        "no-unused-expression": false,
        "interface-name": false,
        "max-line-length": false,
        "object-literal-sort-keys": false,
        "trailing-comma": false
    },
    "rulesDirectory": []
}