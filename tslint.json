{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "comment-format": [
            false
        ],
        "semicolon": [
            true,
            "never"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "no-unused-expression": false,
        "curly": [
            true,
            "as-needed"
        ]
    },
    "rulesDirectory": []
}